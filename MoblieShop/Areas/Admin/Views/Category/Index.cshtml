@model IEnumerable<WebDoDienTu.Models.Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<main>
    <div class="container-fluid px-4">
        <h1 class="mt-4">Danh mục</h1>
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Dashboard</a></li>
            <li class="breadcrumb-item active">Danh mục</li>
        </ol>
        <div class="card mb-4">
            <div class="card-body">
                <button id="addProduct" type="submit" class="btn btn-primary"><a asp-action="Create" style="text-decoration: none; color: white">Thêm danh mục</a></button>
            </div>
        </div>
        <div class="card mb-4">
            <div class="card-header">
                <i class="fas fa-table me-1"></i>
            </div>
            <div class="card-body">
                <table id="datatablesSimple">
                    <thead>
                        <tr>
                            <th>STT</th>
                            <th>@Html.DisplayNameFor(model => model.CategoryName)</th>
                            <th>Sửa</th>
                            <th>Xóa</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>STT</th>
                            <th>@Html.DisplayNameFor(model => model.CategoryName)</th>
                            <th>Sửa</th>
                            <th>Xóa</th>
                        </tr>
                    </tfoot>
                    <tbody>

                        @{
                            int soThuTu = 1;
                        }
                    
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@soThuTu</td>
                                <td>@Html.DisplayFor(modelItem => item.CategoryName)</td>                             
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.CategoryId"><i class="fa-regular fa-pen-to-square"></i></a>
                                </td>
                                <td>
                                    <a asp-action="Delete" asp-route-id="@item.CategoryId"><i class="fa-solid fa-trash"></i></a>
                                </td>
                            </tr>
                            soThuTu++;
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</main>