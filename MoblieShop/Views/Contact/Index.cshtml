@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Single Page Header Start -->
<div class="container-fluid page-header py-5">
    <h1 class="text-center text-white display-6">@Localizer["ContactTitle"]</h1>
    <ol class="breadcrumb justify-content-center mb-0">
        <li class="breadcrumb-item">
            <a asp-controller="Home" asp-action="Index">@Localizer["Home"]</a>
        </li>
        <li class="breadcrumb-item active text-white">@Localizer["ContactTitle"]</li>
    </ol>
</div>
<!-- Single Page Header End -->

<!-- Contact Start -->
<div class="container-fluid contact py-5">
    <div class="container py-5">
        <div class="p-5 bg-light rounded">
            <div class="row g-4">
                <div class="col-lg-12">
                    <div class="h-100 rounded">
                        <iframe class="rounded w-100"
                                style="height: 400px;"
                                src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d18639.66247658481!2d106.7821039772647!3d10.849040075766812!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3175276e7ea103df%3A0xb6cf10bb7d719327!2zSFVURUNIIC0gxJDhuqFpIGjhu41jIEPDtG5nIG5naOG7hyBUUC5IQ00gKFRodSBEdWMgQ2FtcHVzKQ!5e0!3m2!1svi!2s!4v1730196879719!5m2!1svi!2s"
                                loading="lazy" referrerpolicy="no-referrer-when-downgrade">
                        </iframe>
                    </div>
                </div>

                <div class="col-lg-7">
                    <table style="width: 600px; border-collapse: collapse;">
                        <thead>
                            <tr>
                                <th style="border: 1px solid black; padding: 8px; text-align: left;">@Localizer["STT"]</th>
                                <th style="border: 1px solid black; padding: 8px; text-align: left;">@Localizer["MSSV"]</th>
                                <th style="border: 1px solid black; padding: 8px; text-align: left;">@Localizer["FullName"]</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td style="border: 1px solid black; padding: 8px; text-align: left;">1</td>
                                <td style="border: 1px solid black; padding: 8px; text-align: left;">2180604101</td>
                                <td style="border: 1px solid black; padding: 8px; text-align: left;">@Localizer["Name1"]</td>
                            </tr>
                            <tr>
                                <td style="border: 1px solid black; padding: 8px; text-align: left;">2</td>
                                <td style="border: 1px solid black; padding: 8px; text-align: left;">2180605554</td>
                                <td style="border: 1px solid black; padding: 8px; text-align: left;">@Localizer["Name2"]</td>
                            </tr>
                        </tbody>
                    </table>
                </div>

                <div class="col-lg-5">
                    <div class="d-flex p-4 rounded mb-4 bg-white">
                        <i class="fas fa-map-marker-alt fa-2x text-primary me-4"></i>
                        <div>
                            <h4>@Localizer["AddressTitle"]</h4>
                            <p class="mb-2">@Localizer["AddressDesc"]</p>
                        </div>
                    </div>
                    <div class="d-flex p-4 rounded mb-4 bg-white">
                        <i class="fas fa-envelope fa-2x text-primary me-4"></i>
                        <div>
                            <h4>@Localizer["MailTitle"]</h4>
                            <p class="mb-2">@Localizer["MailDesc"]</p>
                        </div>
                    </div>
                    <div class="d-flex p-4 rounded bg-white">
                        <i class="fa fa-phone-alt fa-2x text-primary me-4"></i>
                        <div>
                            <h4>@Localizer["PhoneTitle"]</h4>
                            <p class="mb-2">@Localizer["PhoneDesc"]</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Contact End -->
